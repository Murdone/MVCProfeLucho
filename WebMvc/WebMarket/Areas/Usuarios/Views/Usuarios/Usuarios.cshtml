@*
*@
@model DataPaginador<ImputModelRegistrar>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="container p-4">
    <div class="form-group">
        <form asp-area="Usuarios" asp-controller="Usuarios" asp-action="Usuarios" method="get">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Buscar" class="btn btn-success">
                </div>
            </div>
        </form>
    </div>
    <div class="form-group">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-1">
                    <a class="btn btn-primary text-white" asp-area="Usuarios" asp-page="/Account/Registrar">Agregar</a>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @foreach (var item in Model.List)
        {
            var image = "data:image/jpg;base64," + Convert.ToBase64String(item.Image, 0, item.Image.Length);
            <div class="col-xs-6 col-md-2">
                <div class="card text-center">
                    <div class="card-header ">
                        <a asp-route-id="@item.Id" asp-area="Usuarios" asp-page="/Account/Detallles">
                            <img class='imageUsers' src="@image" />
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <table class="tableCursos">
                            <tbody>
                                <tr>
                                    <td>
                                        <p> @Html.DisplayFor(modelItem => item.Nombre)</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p>@Html.DisplayFor(modelItem => item.Roles)</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @if (item.IdentityUser.LockoutEnabled)
                                        {
                                            <p class="text-success">Disponible.</p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">No disponible.</p>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>